# ===========================================
# CONFIGURACIÓN DE ENTORNO - DON BOSCO CUP
# ===========================================
# Copia este archivo como .env y configura las variables según tu entorno

# ===========================================
# CONFIGURACIÓN DE DJANGO
# ===========================================
# Clave secreta para Django (OBLIGATORIO en producción)
SECRET_KEY=django-insecure-dev-key-donbosco-cup-2024-change-in-production

# Modo debug (True para desarrollo, False para producción)
DEBUG=True

# Hosts permitidos (separados por comas)
ALLOWED_HOSTS=localhost,127.0.0.1

# ===========================================
# CONFIGURACIÓN DE BASE DE DATOS POSTGRESQL
# ===========================================
# Nombre de la base de datos
DB_NAME=donbosco_cup_dev

# Usuario de la base de datos
DB_USER=postgres

# Contraseña de la base de datos
DB_PASSWORD=your-database-password-here

# Host de la base de datos
DB_HOST=localhost

# Puerto de la base de datos
DB_PORT=5432

# ===========================================
# CONFIGURACIÓN DE CORS
# ===========================================
# Orígenes permitidos para CORS (separados por comas)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Orígenes confiables para CSRF (separados por comas)
CSRF_TRUSTED_ORIGINS=http://localhost,http://127.0.0.1

# ===========================================
# CONFIGURACIÓN DE SEGURIDAD
# ===========================================
# Cookies seguras (True para HTTPS, False para desarrollo)
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# Redirección SSL (True para producción con HTTPS)
SECURE_SSL_REDIRECT=False

# ===========================================
# CONFIGURACIÓN DE EMAIL (OPCIONAL)
# ===========================================
# Configuración de email para producción
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=apikey
EMAIL_HOST_PASSWORD=your-sendgrid-api-key
DEFAULT_FROM_EMAIL=noreply@example.com

# ===========================================
# CONFIGURACIÓN DE LOGGING (OPCIONAL)
# ===========================================
# Nivel de logging (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# ===========================================
# CONFIGURACIÓN DE CACHE (OPCIONAL)
# ===========================================
# Backend de cache (para producción)
CACHE_BACKEND=redis://localhost:6379/1

# ===========================================
# CONFIGURACIÓN DE ARCHIVOS ESTÁTICOS
# ===========================================
# URL para archivos estáticos
STATIC_URL=/static/

# Directorio para archivos estáticos
STATIC_ROOT=/var/www/static/

# URL para archivos de media
MEDIA_URL=/media/

# Directorio para archivos de media
MEDIA_ROOT=/var/www/media/

# ===========================================
# CONFIGURACIÓN DE REDIS (OPCIONAL)
# ===========================================
# URL de Redis para cache y sesiones
REDIS_URL=redis://localhost:6379/0

# ===========================================
# CONFIGURACIÓN DE MONITOREO (OPCIONAL)
# ===========================================
# Sentry DSN para monitoreo de errores
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ===========================================
# NOTAS IMPORTANTES
# ===========================================
# 1. NUNCA subas el archivo .env al repositorio
# 2. Cambia SECRET_KEY en producción por una clave segura
# 3. Configura DEBUG=False en producción
# 4. Usa HTTPS en producción (SESSION_COOKIE_SECURE=True)
# 5. Configura ALLOWED_HOSTS con tu dominio en producción
# 6. Usa variables de entorno reales en lugar de valores de ejemplo
